<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/starred_recycler_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/image_rounded"
        android:clipToOutline="true"
        android:src="@drawable/profile01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/starred_recycler_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@+id/starred_recycler_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/starred_recycler_image"
        app:layout_constraintTop_toTopOf="@+id/starred_recycler_image" />

    <TextView
        android:id="@+id/starred_recycler_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/number"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/starred_recycler_name"
        app:layout_constraintBottom_toBottomOf="@+id/starred_recycler_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/starred_recycler_image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_24"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>